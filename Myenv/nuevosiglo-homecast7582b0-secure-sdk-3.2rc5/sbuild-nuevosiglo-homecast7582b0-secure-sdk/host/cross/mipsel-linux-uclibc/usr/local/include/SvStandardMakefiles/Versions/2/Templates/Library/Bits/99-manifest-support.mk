.PHONY: manifest
manifest:
	@echo "Name: $(SvName)"
	@echo "Description: $(SvDescription)"
	@echo "Version: $(SvMajorVersion).$(SvMinorVersion).$(SvRevision)"
	@echo "Requires: $(SvRequires)"
	@echo "Conflicts: $(SvConflicts)"
	@echo "-----------------------------------------"
	@echo "Following options are passed down to everything that depends on this library:"
	@echo "Linker options: $(SvPublicLinkerOptions)"
	@echo "Compiler options: $(SvPublicCompilerOptions)"
	@echo "-----------------------------------------"
	@echo "Following options are passed down to everything that depends on this library during static linkinkg:"
	@echo "Linker options: $(SvPrivateLibraries)"
	@echo "-----------------------------------------"
	@echo "Following options are active during compilation of this library:"
	@echo "CFLAGS: $(CFLAGS)" 
	@echo "CPPFLAGS: $(CPPFLAGS)" 
	@echo "LDFLAGS: $(LDFLAGS)" 
	@echo "LDLIBDS: $(LDLIBS)" 
