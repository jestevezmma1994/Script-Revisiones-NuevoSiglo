<?xml version="1.0" ?>
<settings xmlns="http://cubiware.com/settings-v2.xsd"
          xmlns:i18n="http://cubiware.com/i18n-v1.xsd"
          xmlns:xi="http://www.w3.org/2001/XInclude"
          version="2.0">

    <xi:include href="fonts.settings"/>

    <widget name="DirectoryBitmaps">
        <param tag="scheduled"><bitmap><path>white/iconw_dir_schedule.png</path></bitmap></param>
        <param tag="completed"><bitmap><path>white/iconw_dir_completedrec.png</path></bitmap></param>
        <param tag="ongoing"><bitmap><path>white/iconw_dir_ongoing.png</path></bitmap></param>
        <param tag="failed"><bitmap><path>white/iconw_dir_error.png</path></bitmap></param>
        <param tag="keyword"><bitmap><path>white/iconw_key.png</path></bitmap></param>
        <param tag="series"><bitmap><path>white/iconw_dir_repeated.png</path></bitmap></param>
        <param tag="repeat"><bitmap><path>white/iconw_dir_repeated.png</path></bitmap></param>
        <param tag="directory"><bitmap><path>white/iconw_folder.png</path></bitmap></param>
    </widget>
    <widget name="FolderIconPaths">
        <param tag="keywordIconPath"><string>white/iconw_key.png</string></param>
        <param tag="repeatIconPath"><string>white/iconw_dir_repeated.png</string></param>
        <param tag="folderIconPath"><string>white/iconw_folder.png</string></param>
    </widget>
    <widget name="PvrMsgs">
        <param tag="deletedDirWarning"><string><i18n:gettext>The directory will be deleted.</i18n:gettext></string></param>
    </widget>
    <widget name="PVRRecordingBitmap">
        <param tag="ok"><bitmap><path>white/iconw_ok.png</path></bitmap></param>
        <param tag="okPadlock"><bitmap><path>white/iconw_ok_padlock.png</path></bitmap></param>
        <param tag="recording"><bitmap><path>white/iconw_ongoing.png</path></bitmap></param>
        <param tag="error"><bitmap><path>white/iconw_error2.png</path></bitmap></param>
        <param tag="scheduled"><bitmap><path>white/iconw_schedule.png</path></bitmap></param>
        <param tag="interrupted"><bitmap><path>white/iconw_error1.png</path></bitmap></param>
        <param tag="lock"><bitmap><path>icons_lock_recording.png</path></bitmap></param>
        <param tag="search"><bitmap><path>white/iconw_search.png</path></bitmap></param>
        <param tag="deleted"><bitmap><path>white/iconw_deleted.png</path></bitmap></param>
        <param tag="deletedPadlock"><bitmap><path>white/iconw_deleted_padlock.png</path></bitmap></param>
