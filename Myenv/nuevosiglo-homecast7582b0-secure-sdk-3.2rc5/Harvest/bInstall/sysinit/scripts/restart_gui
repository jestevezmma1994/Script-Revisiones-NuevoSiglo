#!/bin/sh

[ -f /etc/profile ] && . /etc/profile

if [ ! -e /var/run/guistop ]; then

if [ -e /var/run/guirestart ]; then
    TAG=crash
else
    stop_gui
    TAG=debug
fi

if [ -e /etc/platform.d/debug ]; then 
    /etc/platform.d/debug $TAG >/dev/null 2>&1
fi

if [ ! -e /var/run/guirestart ]; then
    start_gui
fi

fi

rm -f /var/run/guirestart
rm -f /var/run/guistop
rm -f /var/run/guistart
